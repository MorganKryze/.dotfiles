{
  // Editor
  "editor.formatOnSaveMode": "modifications",
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.rulers": [88, 120],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.accessibilitySupport": "off",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.minimap.enabled": false,
  "files.autoSave": "afterDelay",
  "terminal.integrated.fontFamily": "'Hack Nerd Font', monospace",

  // Nix
  "[nix]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "nix.serverPath": "nixd",
  "nix.formatterPath": "nixfmt",

  // Python
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.languageServer": "Pylance",
  "isort.interpreter": [
    "/opt/homebrew/Caskroom/miniconda/base/envs/py-format/bin/python"
  ],
  "ruff.path": [
    "/opt/homebrew/Caskroom/miniconda/base/envs/py-format/bin/ruff"
  ],
  "ruff.interpreter": [
    "/opt/homebrew/Caskroom/miniconda/base/envs/py-format/bin/python"
  ],
  "black-formatter.path": [
    "/opt/homebrew/Caskroom/miniconda/base/envs/py-format/bin/black"
  ],
  "black-formatter.args": [
    "--line-length",
    "80",
    "--experimental-string-processing"
  ],

  // Csharp
  "[csharp]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "csharpier.csharpier-vscode"
  },

  //Html
  "[html]": {
    "editor.foldingStrategy": "auto",
    "editor.formatOnSave": true
  },

  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdown.preview.scrollEditorWithPreview": false,
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdownlint.config": {
    "MD028": false,
    "MD025": {
      "front_matter_title": ""
    }
  },
  "files.associations": {
    "*.rmd": "markdown",
    "*.tex": "latex"
  },

  // Dart
  "dart.debugExternalPackageLibraries": false,
  "dart.debugSdkLibraries": false,
  "dart.warnWhenEditingFilesOutsideWorkspace": false,
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "dart.flutterSdkPath": "/Users/morgan/Documents/00-local/08-SDK/flutter",

  //Bash
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  //XML
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },

  //GitLens
  "gitlens.graph.minimap.dataType": "lines",
  "git.suggestSmartCommit": false,
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches"
  ],

  // Prettier
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.arrowParens": "avoid",
  "prettier.printWidth": 80,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.bracketSpacing": true,
  "prettier.semi": true,
  "prettier.proseWrap": "preserve",
  "prettier.endOfLine": "lf",
  "prettier.jsxSingleQuote": false,
  "prettier.requirePragma": false,
  "prettier.insertPragma": false,
  "prettier.ignorePath": ".prettierignore",

  // Live Server
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,

  // GitHub
  "git.confirmSync": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true,
    "csharp": true,
    "dart": true,
    "python": true
  },
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",

  // Code Runner
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "javascript": "node",
    "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
    "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "objective-c": "cd $dir && gcc -framework Cocoa $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "php": "php",
    "python": "python -u",
    "perl": "perl",
    "perl6": "perl6",
    "ruby": "ruby",
    "go": "go run",
    "lua": "lua",
    "groovy": "groovy",
    "powershell": "powershell -ExecutionPolicy ByPass -File",
    "bat": "cmd /c",
    "shellscript": "bash",
    "fsharp": "fsi",
    "csharp": "dotnet run",
    "vbscript": "cscript //Nologo",
    "typescript": "ts-node",
    "coffeescript": "coffee",
    "scala": "scala",
    "swift": "swift",
    "julia": "julia",
    "crystal": "crystal",
    "ocaml": "ocaml",
    "r": "Rscript",
    "applescript": "osascript",
    "clojure": "lein exec",
    "haxe": "haxe --cwd $dirWithoutTrailingSlash --run $fileNameWithoutExt",
    "rust": "cd $dir && rustc $fileName && $dir$fileNameWithoutExt",
    "racket": "racket",
    "scheme": "csi -script",
    "ahk": "autohotkey",
    "autoit": "autoit3",
    "dart": "dart",
    "pascal": "cd $dir && fpc $fileName && $dir$fileNameWithoutExt",
    "d": "cd $dir && dmd $fileName && $dir$fileNameWithoutExt",
    "haskell": "runhaskell",
    "nim": "nim compile --verbosity:0 --hints:off --run",
    "lisp": "sbcl --script",
    "kit": "kitc --run",
    "v": "v run",
    "sass": "sass --style expanded",
    "scss": "scss --style expanded",
    "less": "cd $dir && lessc $fileName $fileNameWithoutExt.css",
    "FortranFreeForm": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fortran-modern": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fortran_fixed-form": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fortran": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "sml": "cd $dir && sml $fileName"
  },

  // Cspell
  "cSpell.enableFiletypes": ["!jsonc", "csharp"],
  "cSpell.userWords": [
    "dotfiles",
    "Kryze",
    "Miniconda",
    "Sonoma",
    "yabai",
    "Fablab"
  ],

  //Sonar lint
  "sonarlint.rules": {
    "csharpsquid:S907": {
      "level": "off"
    },
    "csharpsquid:S3776": {
      "level": "off"
    },
    "csharpsquid:S107": {
      "level": "off"
    },
    "csharpsquid:S2290": {
      "level": "off"
    }
  },

  // YAML
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "yaml.schemas": {
    "file:///Users/morgan/.vscode/extensions/docsmsft.docs-yaml-1.0.5/dist/toc.schema.json": "/toc\\.yml/i"
  },

  // LaTeX Workshop
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.nav"
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "xelatex ðŸ”ƒ",
      "tools": ["xelatex"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "args": [
        "-shell-escape",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ],
      "command": "xelatex",
      "env": {
        "PATH": "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/Library/TeX/texbin:/Library/Apple/usr/bin:/opt/homebrew/bin"
      },
      "name": "xelatex"
    }
  ],

  // Workbench
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Tokyo Night Gogh",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "workbench.sideBar.location": "right",

  // Java
  "[java]": {
    "editor.defaultFormatter": "Oracle.oracle-java"
  },
  "jdk.jdkhome": "/opt/homebrew/Cellar/openjdk/23.0.1/libexec/openjdk.jdk/Contents/Home",

  // PlantUML
  "[plantuml]": {
    "editor.defaultFormatter": "jebbs.plantuml"
  },

  // TOML
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },

  // Astro
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },

  // CSS
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },

  // Docker
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },

  // JavaScript
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  // JSON
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Extensions
  "explorer.confirmDelete": false,
  "path-intellisense.showHiddenFiles": true,
  "terminal.integrated.inheritEnv": false,
  "emmet.triggerExpansionOnTab": true,
  "hediet.vscode-drawio.resizeImages": null,
  "hediet.vscode-drawio.customColorSchemes": [],
  "hediet.vscode-drawio.theme": "atlas",
  "svg.preview.mode": "svg",
  "window.titleBarStyle": "custom",
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.env.osx": {
    "CW_NEW_SESSION": "1",
    "Q_NEW_SESSION": "1"
  },
  "jupyter.askForKernelRestart": false,
  "markdown.extension.math.enabled": false,
  "mdmath.theme": "publication",
  "svelte.enable-ts-plugin": true,
  "github.copilot.advanced": {},
  "diffEditor.hideUnchangedRegions.enabled": true,
  "explorer.confirmPasteNative": false,
  "makefile.configureOnOpen": false,
  "docker.extension.enableComposeLanguageServer": true,
  "[dockercompose]": {
    "editor.defaultFormatter": "docker.docker"
  }
}
